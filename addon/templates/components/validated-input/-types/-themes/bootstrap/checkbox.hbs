<input
  class    = "custom-control-input {{if isValid 'is-valid'}} {{if isInvalid 'is-invalid'}}"
  type     = "checkbox"
  name     = {{name}}
  id       = {{inputId}}
  disabled = {{disabled}}
  checked  = {{value}}
  onclick  = {{action (queue (action update value='target.checked') setDirty)}}
>
{{component labelComponent class='custom-control-label'}}
